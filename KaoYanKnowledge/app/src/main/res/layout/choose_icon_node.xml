<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">


    <com.github.johnkil.print.PrintView
        android:layout_alignParentLeft="true"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:p_iconText="@string/ic_keyboard_arrow_right"
        app:p_iconColor="@color/drak_primary_color_1"
        app:p_iconFont="fonts/material-icon-font.ttf"
        app:p_iconSize="20dp" />

    <com.github.johnkil.print.PrintView
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/icon"
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:p_iconText="@string/ic_email"
        app:p_iconColor="@color/primary_color_1"
        app:p_iconFont="fonts/material-icon-font.ttf"
        app:p_iconSize="24dp" />

    <TextView
        android:textColor="@color/primary_text"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:id="@+id/choose_node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
